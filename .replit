[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "cd client && npm run build && cd .. && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist"]
run = ["sh", "-c", "NODE_ENV=production node dist/index.js"]

